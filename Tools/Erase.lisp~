(in-package #:CL-Tile)

(defun erase (mx my)
  (let* ((map (object-array Tile-File))
	 (size-x (cadr (array-dimensions map)))
	 (size-y (car (array-dimensions map)))
	 (x (mod mx (object-tsx Tile-File)))
	 (y (mod my (object-tsy Tile-File)))
	 )
    (when (and (and (> x -1) (> y -1)) (and (< x size-x) (< y size-y)))
      (setf (aref map y x) -1)
      )
    )
  )
